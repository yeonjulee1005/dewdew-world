---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { Image } from 'astro:assets'
import Link from '@components/Link.astro'
import LocaleSelect from '@components/LocaleSelect.astro'

import { MENU_ITEMS } from '../../i18n/consts.ts'
import { type Lang } from '../../i18n.ts'

const locale = Astro.currentLocale as Lang;
---
<div class='relative w-screen items-center justify-between border-b border-zinc-700 px-4 py-5 lg:hidden lg:w-[1000px] lg:px-0'>
  <Link
    link='/'
    customClass='flex items-center gap-1'
    target='_self'
    label='dewdew'
  >
    <span
      slot='link'
      class='cursor-pointer text-3xl font-bold text-red-400 duration-200 hover:text-rose-600 hover:opacity-90 hover:transition-opacity'
    >
      {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].nav.dewdew}
    </span>
    <Image
      slot='link'
      class='cursor-pointer rounded-full border border-zinc-700 duration-200 hover:border-rose-600 hover:opacity-90 hover:transition-opacity'
      src='/images/dewdew_world.webp'
      width={30}
      height={30}
      quality={80}
      loading='lazy'
      alt='logo-mobile'
    />
  </Link>
  <div class='flex-auto' />
  <div class='flex flex-wrap items-center gap-x-3 gap-y-1 my-2'>
    <Link
      text={MENU_ITEMS[locale as keyof typeof MENU_ITEMS].nav.uses}
      link={getRelativeLocaleUrl(locale, 'uses')}
      customClass='cursor-pointer text-lg text-red-400 duration-200 hover:text-rose-600 hover:opacity-90 hover:transition-opacity'
      target='_self'
      label='uses'
    />
    <div class='h-4 border-r border-zinc-700' />
    <Link
      text={MENU_ITEMS[locale as keyof typeof MENU_ITEMS].nav.tech}
      link={getRelativeLocaleUrl(locale, 'tech')}
      customClass='cursor-pointer text-lg text-red-400 duration-200 hover:text-rose-600 hover:opacity-90 hover:transition-opacity'
      target='_self'
      label='tech'
    />
    <div class='h-4 border-r border-zinc-700' />
    <Link
      text={MENU_ITEMS[locale as keyof typeof MENU_ITEMS].nav.guestbook}
      link={getRelativeLocaleUrl(locale, 'guestbook')}
      customClass='cursor-pointer text-lg text-red-400 duration-200 hover:text-rose-600 hover:opacity-90 hover:transition-opacity'
      target='_self'
      label='guestbook'
    />
    <div class='h-4 border-r border-zinc-700' />
    <Link
      text={MENU_ITEMS[locale as keyof typeof MENU_ITEMS].nav.dewdewDev}
      link='https://www.dewdew.dev'
      customClass='cursor-pointer text-lg text-red-400 duration-200 hover:text-rose-600 hover:opacity-90 hover:transition-opacity'
      target='_blank'
      label='dewdew'
    />
    <div class='h-4 border-r border-zinc-700' />
    <LocaleSelect />
  </div>
</div>
