---
import Link from '@components/Link.astro'
import Bold from '@components/Bold.astro'

import { mainGoalText } from '@data/index.ts'
---
<p class='mb-4'>
  {mainGoalText.first}
  <Bold customClass='text-red-400' text='.' /><br />
  {mainGoalText.second}
  <Link
    text='Astro'
    link='https://astro.build/'
    customClass='text-yellow-500 duration-200 border-b-4 border-yellow-300 hover:text-yellow-600 hover:border-yellow-500 hover:transition-opacity'
    target='_blank'
    label='astro'
  />
  <Bold customClass='text-red-400' text=',' />
  <Link
    text='Element Plus'
    link='https://element-plus.org/'
    customClass='text-yellow-500 duration-200 border-b-4 border-yellow-300 hover:text-yellow-600 hover:border-yellow-500 hover:transition-opacity'
    target='_blank'
    label='elementplus'
  />
  <Bold customClass='text-red-400' text='.' /><br />
</p>