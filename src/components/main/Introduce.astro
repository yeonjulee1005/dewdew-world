---
import Link from '@components/Link.astro'
import Bold from '@components/Bold.astro'

import { MENU_ITEMS } from '../../i18n/consts.ts'
import { type Lang } from '../../i18n.ts'

const locale = Astro.currentLocale as Lang;
---
<p class='mb-2'>
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.hello}
  <Bold customClass='text-red-400' text='!' /><br />
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.name}
  <Bold customClass='text-red-400' text=',' />
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.aheadLiving}
  <Link
    text='Seoul'
    link='https://en.wikipedia.org/wiki/Seoul'
    customClass='text-orange-500 duration-200 border-b-4 border-orange-300 hover:text-orange-600 hover:border-orange-500 hover:transition-opacity'
    target='_blank'
    label='seoul'
  />
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.country}
  <Bold customClass='text-red-400' text='.' /><br />
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.aheadWorking}
  <Link
    text='Team REmited'
    link='https://blog.remited.ai/'
    customClass='text-orange-500 duration-200 border-b-4 border-orange-300 hover:text-orange-600 hover:border-orange-500 hover:transition-opacity'
    target='_blank'
    label='Team REmited'
  />
  <Bold customClass='text-red-400' text=',' />
  {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].mainIntro.workingPosition}
  <Bold customClass='text-red-400' text='.' /><br />
</p>