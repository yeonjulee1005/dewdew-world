---
import { Image } from 'astro:assets'

interface Props {
  authorClass: string
  avatar: string
  avatarAlt: string
  author: string
  publishedDate: Date
  minutes?: {
    readMinutes: string
  }
  readTime?: string
}

const {
  authorClass,
  avatar,
  avatarAlt,
  author,
  publishedDate,
  minutes,
  readTime
} = Astro.props
---
<div class={authorClass}>
  <Image
    class='h-10 w-10 rounded-full border-2 border-yellow-400'
    src={avatar}
    width={40}
    height={40}
    quality={80}
    loading='lazy'
    alt={avatarAlt}
  />
  <div class='flex flex-col gap-0.25'>
    <p class='text-md'>
      {author}
    </p>
    <div class='flex items-center gap-1.5'>
      <p class='text-md'>
        {
          new Date(publishedDate).toLocaleDateString('en', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          })
        }
      </p>
      <div class='h-0.5 w-0.5 rounded-full bg-neutral-600' />
      <p class='text-md text-red-500'>
        {minutes?.readMinutes ?? readTime}
      </p>
    </div>
  </div>
</div>
