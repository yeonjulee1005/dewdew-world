---
import Head from '@components/Head.astro'
import { getRelativeLocaleUrl } from 'astro:i18n';

const aboutURL=getRelativeLocaleUrl("ko", "about");
interface Props {
  title: string
  description?: string
}

const { title, description = 'This is Dewdew World' } = Astro.props
---

<html lang='en'>
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="relative flex flex-col items-center">
    <div class="relative flex justify-between items-center py-2 px-4 w-screen md:w-[1000px] md:px-0 border border-red-500">
      <span class="text-3xl font-extrabold cursor-pointer text-rose-400 hover:text-rose-600 hover:transition-opacity hover:opacity-90 duration-100">
        Dewdew World
      </span>
      <div class="flex-auto" />
      <div class="flex gap-2">
        <a href={getRelativeLocaleUrl('ko', 'tech')}>Blog</a>
        <a href={getRelativeLocaleUrl('ko', 'about')}>About</a>
      </div>
    </div>
    <slot />
    <style is:global>
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
    <script>
      import { inject } from '@vercel/analytics'
      inject()
    </script>
  </body>
</html>
