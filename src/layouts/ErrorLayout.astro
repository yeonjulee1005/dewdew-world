---
import Head from '@components/Head.astro'
import Link from '@components/Link.astro'

import { errorText } from '@data/index.ts'

const title = 'Dewdew | 404'
const description = 'Dewdew World 🌏'
---
<html lang='en'>
  <head>
    <Head title={title} description={description} />
  </head>
  <body>
    <main class='flex min-h-screen flex-col items-center justify-center'>
      <p class='text-9xl font-bold'>
        {errorText.title}
        404
      </p>
      <p class='mb-8 mt-4 text-2xl'>
        {errorText.notFound}
      </p>
      <Link
        link='/'
        customClass='cursor-pointer h-14 rounded-lg px-8 flex items-center text-lg text-zinc-50 bg-red-400 duration-200 hover:bg-rose-600 hover:opacity-90 hover:transition-opacity'
        target='_self'
        text='홈으로 가기'
        label='dewdew'
      />
    </main>
  </body>
</html>
