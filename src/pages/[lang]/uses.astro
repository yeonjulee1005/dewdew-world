---
import Layout from '@layouts/Layout.astro'
import Bold from '@components/Bold.astro'
import List from '@components/uses/List.astro'

import { LOCALES, type Lang } from '../../i18n.ts'
import { MENU_ITEMS, USES_EDITOR, USES_EDITOR_EXTENSIONS, USES_TERMINAL, USES_DESKTOP_APP, USES_HARDWARE, USES_TITLE, USES_DESCRIPTION } from '../../i18n/consts.ts'

const locale = Astro.currentLocale as Lang;

export const getStaticPaths = () =>
  Object.keys(LOCALES).map((lang) => ({
    params: { lang },
  }));
---
<Layout title={USES_TITLE[Astro.currentLocale as keyof typeof USES_TITLE]} description={USES_DESCRIPTION[Astro.currentLocale as keyof typeof USES_DESCRIPTION]}>
  <div class='relative mt-8 flex w-screen flex-col items-center justify-between gap-2 px-4 py-2 lg:w-[1000px] lg:px-0'>
    <div class='w-screen px-4 text-lg py-5 text-neutral-700 lg:w-[600px] lg:px-0'>
      <h1 class="text-3xl font-bold break-keep">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.title}
        <Bold customClass='text-red-400' text=',' /><br />
      </h1><br />
      <h2 class="text-2xl pt-2">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.editor}
      </h2>
      <List lists={USES_EDITOR} />
      <h2 class="text-2xl pt-8  border-t border-neutral-700">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.editorExtensions}
      </h2>
      <List lists={USES_EDITOR_EXTENSIONS} />
      <h2 class="text-2xl pt-8  border-t border-neutral-700">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.terminal}
      </h2>
      <List lists={USES_TERMINAL} />
      <h2 class="text-2xl pt-8  border-t border-neutral-700">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.desktopApp}
      </h2>
      <List lists={USES_DESKTOP_APP} />
      <h2 class="text-2xl pt-8  border-t border-neutral-700">
        {MENU_ITEMS[locale as keyof typeof MENU_ITEMS].uses.hardware}
      </h2>
      <List lists={USES_HARDWARE} />
    </div>
  </div>
</Layout>
